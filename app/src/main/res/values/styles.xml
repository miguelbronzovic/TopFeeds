<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChildrenItem">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/children_item_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ChildrenItemAuthor" parent="ChildrenItem">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/children_item_name_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ChildrenItemComments" parent="ChildrenItem">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/children_item_screenname_text_size</item>
    </style>
    <style name="ChildrenItemCreated" parent="ChildrenItem">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/children_item_created_text_size</item>
    </style>
    <style name="ChildrenItemText" parent="ChildrenItem">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
